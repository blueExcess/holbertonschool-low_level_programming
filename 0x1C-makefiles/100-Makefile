CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
.PHONY: all

clean:
	$(RM) -f $(NAME) *~
.PHONY: clean

oclean:
	$(RM) -f $(OBJ)
.PHONY: oclean

fclean: clean oclean
.PHONY: fclean

re: oclean all
.PHONY: re
