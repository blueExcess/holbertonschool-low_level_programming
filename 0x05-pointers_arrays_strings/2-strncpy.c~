/* 2. mimic the function 'strncopy()' */

#include "holberton.h"

/**
 * _strncopy - mimic functionality of strncopy()
 * @dest: destination string
 * @src: source string
 * @n: something
 *
 * Return: dest
 */
char *_strncpy(char *dest, char *src, int n)
{
	int i;

	while (*src && i < n)
	{
		dest[i] = src[i];
		i++;
	}
	return (dest);
}
